{% extends 'GuestBookBundle::layout.html.twig' %}

{% block title "GuestBook | index" %}


{% block content %}
    {% block paginator  %}
        <div class="pagination pagination-centered">
            <ul>
                <li><a href="#">«</a></li>
                <li><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">»</a></li>
            </ul>
        </div>
    {% endblock %}



    <form action="{{ path('post_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_rest(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('post_new') }}">#}
                {#Create a new entry#}
            {#</a>#}
        {#</li>#}
    {#</ul>#}




    <hr>
    <div class="row">
        <div class="span16 posts">


            {% for entity in entities %}
                <div class="post_content">
                    <span class="label label-info">{{ entity.id }}</span>
                    <span class="label label-info">{{ entity.name }}</span>
                    <span class="label label-info">{{ entity.email }}</span>

                    <div class="post">
                        {{ entity.body }}
                    </div>
                    <ul class="breadcrumb br-margin">
                        <li>
                            <a href="{{ path('post_show', { 'id': entity.id }) }}">Show</a> <span class="divider">/</span>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a> <span class="divider">/</span>
                        </li>
                        <li>
                            <a href="{{ path('post_delete', {'id': entity.id}) }}">Delete</a>
                        </li>
                    </ul>
                </div>
            {% endfor %}

        </div>
    </div>


{% endblock %}

